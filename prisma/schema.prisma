generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

enum OAuthProvider {
  GOOGLE
  FACEBOOK
}

enum JoinRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  password  String?
  avatarUrl String?

  isActive Boolean @default(true)

  teams    UserTeam[]
  accounts OAuthAccount[]
  joinRequests JoinRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id   String @id @default(uuid())
  name String
  slug String @unique

  isActive Boolean @default(true)

  logo           String? @db.Text
  primaryColor   String?
  secondaryColor String?

  users   UserTeam[]
  players Player[]
  matches Match[]
  seasons Season[]
  joinRequests JoinRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserTeam {
  id     String   @id @default(uuid())
  userId String
  teamId String
  role   TeamRole @default(MEMBER)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, teamId])
  @@index([teamId])
  @@index([userId])
}

model OAuthAccount {
  id     String @id @default(uuid())
  userId String

  provider          OAuthProvider
  providerAccountId String

  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model JoinRequest {
  id     String @id @default(uuid())
  userId String
  teamId String
  status JoinRequestStatus @default(PENDING)
  role   TeamRole          @default(MEMBER)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, teamId])
  @@index([teamId])
  @@index([userId])
}

model Player {
  id     String @id @default(uuid())
  teamId String

  name     String
  nickname String?
  position String?
  number   Int?
  photo    String?  @db.Text
  active   Boolean @default(true)

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  goals     Goal[]
  presences Presence[]

  seasonPlayers SeasonPlayer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([teamId])
  @@index([name])
}

model SeasonPlayer {
  id        String   @id @default(cuid())
  seasonId  String
  playerId  String
  createdAt DateTime @default(now())

  season Season @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([seasonId, playerId])
  @@index([seasonId])
  @@index([playerId])
}

model Season {
  id        String   @id @default(cuid())
  teamId    String
  year      Int
  name      String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team    Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  matches Match[]

  seasonPlayers SeasonPlayer[]

  @@unique([teamId, year])
  @@index([teamId])
}

model Match {
  id       String @id @default(uuid())
  teamId   String
  seasonId String

  date     DateTime
  location String?
  opponent String?
  notes    String?

  ourScore   Int @default(0)
  theirScore Int @default(0)

  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  season Season @relation(fields: [seasonId], references: [id], onDelete: Restrict)

  goals     Goal[]
  presences Presence[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([teamId, seasonId])
  @@index([seasonId])
  @@index([teamId])
  @@index([date])
}

model Goal {
  id       String @id @default(uuid())
  matchId  String
  playerId String

  minute  Int?
  ownGoal Boolean @default(false)

  match  Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([matchId])
  @@index([playerId])
}

model Presence {
  id       String @id @default(uuid())
  matchId  String
  playerId String

  present Boolean @default(true)

  match  Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([matchId, playerId])
  @@index([matchId])
  @@index([playerId])
}
