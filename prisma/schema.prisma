generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

enum OAuthProvider {
  GOOGLE
  FACEBOOK
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  avatarUrl String?

  isActive  Boolean  @default(true)

  teams     UserTeam[]
  accounts  OAuthAccount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique

  isActive  Boolean  @default(true)

  users     UserTeam[]
  players   Player[]
  matches   Match[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserTeam {
  id        String   @id @default(uuid())
  userId    String
  teamId    String
  role      TeamRole @default(MEMBER)

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, teamId])
  @@index([teamId])
  @@index([userId])
}

model OAuthAccount {
  id                String        @id @default(uuid())
  userId            String

  provider          OAuthProvider
  providerAccountId String

  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?

  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Player {
  id        String   @id @default(uuid())
  teamId    String

  name      String
  nickname  String?
  position  String?
  number    Int?
  active    Boolean  @default(true)

  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  goals     Goal[]
  presences Presence[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([teamId])
  @@index([name])
}

model Match {
  id          String   @id @default(uuid())
  teamId      String

  date        DateTime
  location    String?
  opponent    String?
  notes       String?

  ourScore    Int      @default(0)
  theirScore  Int      @default(0)

  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  goals       Goal[]
  presences   Presence[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([teamId])
  @@index([date])
}

model Goal {
  id        String   @id @default(uuid())
  matchId   String
  playerId  String

  minute    Int?

  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([matchId])
  @@index([playerId])
}

model Presence {
  id        String   @id @default(uuid())
  matchId   String
  playerId  String

  present   Boolean  @default(true)

  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([matchId, playerId])
  @@index([matchId])
  @@index([playerId])
}
